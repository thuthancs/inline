{
    "manifest_version": 3,
    "name": "Inline",
    "version": "0.1.0",
    "description": "Save highlights and add comments to text from any webpage to Notion",
    "icons": {
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Open Inline"
    },
    "side_panel": {
        "default_path": "src/popup/index.html"
    },
    "background": {
        "service_worker": "sw.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "sidePanel",
        "identity"
    ],
    "host_permissions": [
        "https://inline-notion.vercel.app/*",
        "https://api.notion.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}